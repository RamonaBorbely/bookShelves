<%- include('head') %>
<!-- move footer out of body -->

<nav class="bg-blue-600 text-white p-4">
    <ul class="flex justify-between items-center space-x-4">
        <% if(typeof user !== 'undefined' && user) { %>
            <li class="text-xl">Hello, <%= user.name %></li>
            <ul class="flex space-x-4">
                <li><a href="/auth/logout" class="hover:underline">Logout</a></li>
                <li><a href="/mybooks" class="hover:underline">My books</a></li>
            </ul>
        <% } else { %>
            <li class="text-xl">Welcome</li>
            <ul class="flex space-x-4">
                <li><a href="/auth/login" class="hover:underline">Login</a></li>
                <li><a href="/auth/register" class="hover:underline">Register</a></li>
            </ul>
        <% } %>

       
    </ul>
</nav>