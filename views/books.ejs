<%- include('partials/header') %>

<div class="container mx-auto px-4 py-6">
    <h1 class="text-3xl font-bold mb-4 text-center">Latest book list</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 bg-slate-100">
        <% books.forEach( book => { %>
            <div class="flex flex-col justify-center items-center p-4 border rounded shadow transform transition-transform duration-300 hover:scale-105 hover:shadow-xl">
                <img 
                    src="/data/book-covers<%= book.img_paths.slice(7) %>"
                    alt="<%= book.name %> cover" 
                    class="w-full h-40 object-cover mb-4"
                >
                <h2 class="text-xl font-semibold mb-2"><%= book.name %></h2>
                <p class="text-sm text-gray-600 mb-2"> by <span class="font-semibold"><%= book.author %></span></p>
                <p class="mt-2 mb-4"><%= book.description %></p>
                <div class="flex justify-around w-full">
                    <form action="/mybooks/<%= book._id%>" method="post">
                        <button type="submit" class="mr-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Add to your list
                        </button>
                    </form>

                    <form action="/books/<%= book._id%>" method="get">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            View Details                
                        </button>
                    </form>
                </div>
            </div>
       <% }) %>
    </div>
</div>



<%- include('partials/footer') %>